@model IEnumerable<RMS.Models.VM.DeliveryVM>

@{
    ViewBag.Title = "All Deliveries";
}

<h4 style="text-align:right;">&infin; User @Session["User"] &infin;</h4>
<hr />
<h3 style="text-align:center">All Deliveries</h3>
<hr />

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliverymanId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            @if (item.DeliverymanId == null)
            {
                <td>
                    @Html.ActionLink("Check Deliverman Status", "Deliveryman") |
                    @Html.ActionLink("Assign Delivery Man", "Edit", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.DeliverymanId)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>


        </tr>
    }

</table>
<hr />

<p class="form-group" style="text-align:center">
    <a class="btn btn-warning" href="/Deliveryman/Index">Back To Delivery Index</a>
</p>