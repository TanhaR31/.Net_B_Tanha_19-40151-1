@model IEnumerable<RMS.Models.VM.OrderVM>

@{
    ViewBag.Title = "Orders";
}

<h4 style="text-align:right;">&infin; User @Session["User"] &infin;</h4>
<hr />
<h3 style="text-align:center;">All Orders</h3>
<hr />

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
    }

</table>
<hr />
<p class="form-group" style="text-align:center">
    <a class="btn btn-warning" href="/Deliveryman/Index">Back To Delivery Index</a>
</p>
